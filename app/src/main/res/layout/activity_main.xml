<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".MainActivity">

    <View
        android:id="@+id/divider"
        android:layout_width="61dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/listDivider"
        android:clickable="true"
        tools:background="#d3d3d3" />

    <ImageView
        android:id="@+id/greenSquare3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="139dp"
        android:layout_toEndOf="@+id/purpleCircle"
        app:srcCompat="@drawable/green_square" />

    <ImageView
        android:id="@+id/greenSquare2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_above="@+id/redSquare3"
        android:layout_toEndOf="@+id/purpleCircle"
        app:srcCompat="@drawable/green_square" />

    <ImageView
        android:id="@+id/redSquare3"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="-38dp"
        android:layout_toStartOf="@+id/greenSquare"
        app:srcCompat="@drawable/red_square" />

    <ImageView
        android:id="@+id/redSquare2"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="178dp"
        android:layout_marginStart="90dp"
        app:srcCompat="@drawable/red_square" />

    <ImageView
        android:id="@+id/purpleCircle"
        android:layout_width="25dp"
        android:layout_height="21dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/purple_circle" />

    <ImageView
        android:id="@+id/greenSquare"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="181dp"
        app:srcCompat="@drawable/green_square" />

    <ImageView
        android:id="@+id/redSquare"
        android:layout_width="23dp"
        android:layout_height="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="216dp"
        android:layout_marginEnd="63dp"
        app:srcCompat="@drawable/red_square" />

    <TextView
        android:id="@+id/scoreTxtView"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="SCORE: 0"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>